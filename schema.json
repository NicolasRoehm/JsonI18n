{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "description": "A localization resource file",
    "properties": {
        "arrayGroups": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "patternProperties": {
                    "^[a-z]{2}(-[A-Z]{2,3})?": {
                        "type": "string",
                        "description": "The name of array key for strings in this locale"
                    }
                }
            }
        },
        "values": {
            "type": "object",
            "description": "A collection of locale objects",
            "patternProperties": {
                "^[a-z]{2}(-[A-Z]{2,3})?": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string",
                        "description": "A collection of strings used in the application"
                    }
                }
            }
        }
    },
    "additionalProperties": false
}